<Window x:Class="networkExtension.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Status" Height="200" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="False" ShowInTaskbar="False" Loaded="Window_Loaded">
    <Grid Background="White" Margin="5">
        <StackPanel>
            <Button Content="X" HorizontalAlignment="Right" Width="20" Click="CloseButton_Click"/>
            <TextBlock Text="Статус носія:" FontSize="16" Margin="10" x:Name="statusTextBlock"/>
            <TextBlock Text="Швидкість:" FontSize="16" Margin="10" x:Name="speedTextBlock"/>
            <TextBlock Text="Тривалість:" FontSize="16" Margin="10" x:Name="durationTextBlock"/>
        </StackPanel>
    </Grid>
</Window>